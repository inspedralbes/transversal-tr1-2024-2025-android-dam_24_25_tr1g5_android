<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF8C00"/>  <!-- Color al presionar -->
            <corners android:radius="8dp"/>   <!-- Bordes redondeados -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF5722"/>  <!-- Color normal -->
            <corners android:radius="8dp"/>   <!-- Bordes redondeados -->
        </shape>
    </item>
</selector>
