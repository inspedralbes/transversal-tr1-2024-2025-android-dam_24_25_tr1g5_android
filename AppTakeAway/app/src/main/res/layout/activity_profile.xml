<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Botón de retroceso -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Back Button" />

    <!-- Título de perfil -->
    <TextView
        android:id="@+id/profileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:text="Perfil"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <!-- ID del usuario -->
    <TextView
        android:id="@+id/idTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileTitle"
        android:layout_marginTop="16dp"
        android:text="ID: "
        android:textSize="16sp" />

    <!-- Email del usuario -->
    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTextView"
        android:layout_marginTop="8dp"
        android:text="Correu: "
        android:textSize="16sp" />

    <!-- Contraseña del usuario (oculta) -->
    <TextView
        android:id="@+id/passwordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailTextView"
        android:layout_marginTop="8dp"
        android:text="Contrasenya: [No se muestra por motivos de seguridad]"
        android:textSize="16sp" />

    <!-- Nombre del usuario -->
    <TextView
        android:id="@+id/firstNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordTextView"
        android:layout_marginTop="8dp"
        android:text="Nom: "
        android:textSize="16sp" />

    <!-- Apellido del usuario -->
    <TextView
        android:id="@+id/lastNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstNameTextView"
        android:layout_marginTop="8dp"
        android:text="Cognom: "
        android:textSize="16sp" />

    <!-- Método de pago del usuario -->
    <TextView
        android:id="@+id/paymentMethodTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lastNameTextView"
        android:layout_marginTop="8dp"
        android:text="Mètode de pagament: "
        android:textSize="16sp" />

    <!-- Botón para editar el perfil -->
    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/paymentMethodTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Editar Perfil"
        android:textColor="@android:color/white"
        android:padding="12dp" />

</RelativeLayout>
